---
import { formatDate } from "@/utils";
import { Image } from "astro:assets";

const { title, date, author, slug, description, image } = Astro.props;
---
<div class="blog-post-box text-center mt-4">
    <div class="post-standard-title">
        <div class="post-img mt-4">
            <a href={`/blog/${slug}`}>
                <Image src={image} class="img-fluid" alt={title}  loading="lazy" width={800} height={480} />
            </a>
        </div>

        <div class="blog-standard-content mt-5">
            <h2 class="mt-3"><a href={`blog/${slug}`} class="blog-post-title">{title}</a></h2>
            <div class="blog-post-info mt-4 fst-italic">
                <span class="blog-post-date">
              <a href="javascript:void(0)" class="text-muted pe-2">{formatDate(date)} </a>
            </span>
                <span class="blog-post-author text-muted ps-2">{author}
            </span>
            </div>

            <p class="text-muted mt-4">{description}</p>
            <div class="mt-4">
                <a href={`/blog/${slug}`} class="btn btn-md btn-dark-custom">Continue Reading</a>
            </div>

        </div>
    </div>
</div>